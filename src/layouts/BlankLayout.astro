---
import "../styles/global.css";
import imagen1 from "../assets/images/yuntas_publicidad_logo.webp";

interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="icon" 
      type="image/webp"
      href={imagen1.src}
    />
    
  </head>
  <body>
    <slot />
  </body>
</html>