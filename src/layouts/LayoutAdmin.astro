---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Sidebar from "../components/dashboard/Sidebar";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap"
      rel="stylesheet"
    />
    <ClientRouter />
  </head>

  <body
    id="admin-body"
    class="grid min-h-[100dvh] grid-rows-[auto_1fr_auto] bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100"
  >
    <!-- NAVBAR -->
    <Navbar variant="admin" />

    <!-- MAIN WRAPPER: Sidebar + Content -->
    <main class="flex w-full">
      <!-- SIDEBAR IZQUIERDO -->
      <aside class="w-64 hidden lg:block h-full">
        <Sidebar client:load />
      </aside>

      <!-- CONTENIDO PRINCIPAL -->
      <section
        id="main-content"
        class="flex-1 p-6 overflow-x-auto bg-gray-50 dark:bg-gray-800"
      >
        <slot />
      </section>
    </main>

    <!-- FOOTER -->
    <Footer />
  </body>
</html>
