---
import { Image } from 'astro:assets'
const producto = Astro.props;

const formatImage = producto.image
  .toLowerCase()
  .replaceAll('-', '_')
  .replace('productos', 'products');

const imagePath = `/src/assets/images${formatImage}`
---
<a
  href={`/products/${producto.id}`}
  class="relative flex flex-col items-center hover:scale-105 transition-all duration-200 cursor-pointer group my-2 sm:my-3 md:my-4"
>
  <figure class="aspect-square w-full  rounded-3xl">
    <Image src={imagePath} alt={producto.title} width="100" height="100" class="object-cover w-full h-full"/>
    <figcaption class="text-white pt-2 text-base sm:text-lg md:text-2xl font-bold text-center">
      {producto.title}
    </figcaption>
  </figure>
</a>
