---
import ProductCard from "../components/products/ProductCard.jsx";
import Layout from "../layouts/Layout.astro";
import { Picture } from "astro:assets";
import imagenPrincipio from "../assets/images/products/principio.webp";

const API_URL = import.meta.env.VITE_API_URL;

let productsApi = [];
try {
  const response = await fetch(API_URL);
  if (!response.ok) throw new Error("Error al obtener productos de la API");

  const jsonResponse = await response.json();
  if (jsonResponse.success && Array.isArray(jsonResponse.data)) {
    productsApi = jsonResponse.data.map(producto => ({
      id: producto.id,
      title: producto.title,
      subtitle: producto.subtitle,
      tagline: producto.tagline,
      description: producto.description,
      image: producto.image || producto.images?.[0] || "", 
      stock: producto.stockProducto,
      price: producto.precioProducto,
      section: producto.seccion
    }));
  }
} catch (err) {
  console.error("Error al obtener productos:", err);
}

// Agrupar productos para móvil (2 por fila)
const groupedMobile = [];
for (let i = 0; i < productsApi.length; i += 2) {
  groupedMobile.push(productsApi.slice(i, i + 2));
}

// Agrupar productos para desktop (3 por fila)
const groupedDesktop = [];
for (let i = 0; i < productsApi.length; i += 3) {
  groupedDesktop.push(productsApi.slice(i, i + 3));
}
---

<Layout title="Productos">
  <section class="relative w-full">
    <Picture src={imagenPrincipio} inferSize={true} formats={["webp"]} alt="Banner de Productos" />
  </section>

  <div class="bg-gray h-30 flex items-center justify-center">
    <h2 class="text-xl sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl Montserrat font-extrabold text-[#243360]">
      NUESTROS PRODUCTOS
    </h2>
  </div>
  <section class="w-full bg-linear-to-b from-blue-900 to-indigo-950 py-20">
    <div class="max-w-[1200px] px-4 sm:px-8 md:px-12 lg:px-16 xl:px-24 mx-auto">
      <div class="flex items-center justify-center mb-10">
        <p class="text-xl sm:text-2xl md:text-2xl lg:text-3xl xl:text-4xl Montserrat font-medium text-white/75 text-center">
          Descubre la selección que tenemos para ti
        </p>
      </div>

      <!-- Vista móvil - 2 columnas -->
      <div class="md:hidden">
        {groupedMobile.map((row, index) => (
          <div key={index}>
            {index > 0 && <div class="w-full h-[2px] bg-[#76b3c2] my-5"></div>}
            <div class="grid grid-cols-2 gap-4">
              {row.map((producto) => (
                <div key={producto.id} class="flex justify-center">
                  <div class="w-full max-w-[250px]">
                    <ProductCard client:load producto={producto} />
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>

      <!-- Vista desktop - 3 columnas -->
      <div class="hidden md:block">
        {groupedDesktop.map((row, index) => (
          <div key={index}>
            {index > 0 && <div class="w-full h-[2px] bg-[#76b3c2] my-8"></div>}
            <div class="grid grid-cols-3 gap-8 lg:gap-12">
              {row.map((producto) => (
                <div key={producto.id} class="flex justify-center">
                  <div class="w-full max-w-[250px]">       
                    <ProductCard client:load producto={producto} />

                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
