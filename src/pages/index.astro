    <!-- <HeroSlider client:load /> -->
    <Hero />
  </section>

  <section class="bg-white py-16 border-t-8 border-blue-300">
    <div class="container mx-auto grid lg:grid-cols-2 gap-14">
      <!-- Columna izquierda -->
      <div>
        <div
          class="bg-blue-50 rounded-xl p-4 shadow-md flex items-center gap-3 ml-14 mb-6"
        >
          <span class="text-2xl px-8">
            <FaCheck />
          </span>
          <p class="text-gray-800 font-medium">
            Descubre cómo integrar esta innovadora tecnología en tus proyectos
            arquitectónicos
          </p>
        </div>

        <Picture
          src={card2}
          alt="Evento con iluminación LED"
          class="rounded-r-xl shadow-lg object-cover sm:h-[548px]"
        />
      </div>

      <!-- Columna derecha -->
      <div>
        <Picture
          src={card1}
          alt="Túnel de luces LED"
          class="rounded-l-xl shadow-lg object-cover sm:h-[548px]"
        />

        <div
          class="bg-blue-50 rounded-xl p-4 shadow-md flex items-center gap-3 mr-14 mt-6"
        >
          <span class="text-2xl px-8">
            <FaCheck />
          </span>
          <p class="text-gray-800 font-medium">
            Aprende cómo esta tecnología transforma el ambiente y optimiza el
            consumo energético
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="relative w-full">
    <div
      class="absolute top-10 right-0 bg-gray-100 py-3 px-8 text-xl uppercase font-semibold text-gray-600 rounded-l-xl shadow-lg"
    >
      Nuestros <span class="font-extrabold">proyectos</span>
    </div>
    <Picture
      src={proyecto1}
      alt="Proyecto destacado de Yuntas Publicidad"
      class="w-full h-auto object-cover"
    />
  </section>

  <!-- Sección de testimonios -->
  <div class="px-14 py-6 w-full relative bg-[#23C1DE]">
    <h3 class="text-3xl md:text-4xl font-bold text-white uppercase">
      Tu opinión es importante
    </h3>
    <h3 class="text-3xl md:text-4xl font-bold text-white uppercase">
      para nosotros
    </h3>
  </div>
  <section class="w-full bg-white py-2 sm:py-10 px-2 sm:px-16">
    <div class="relative w-full min-h-screen flex justify-center items-center rounded-4xl overflow-hidden">
      <img
        src={bg_comentarios.src}
        alt="Luminaria LED innovadora para interior de cafetería, estilo contemporáneo, ideal para espacios cálidos y funcionales"
        title="Luminaria LED"
        class="absolute z-0 w-full h-full object-cover"
        loading="lazy"
      />
      <div class="relative z-10 p-6 w-full">
        <CommentSlider comentarios={comentarios} client:visible />
      </div>
    </div>
  </section>

