---
import Layout from "../layouts/Layout.astro";
import fondo from "../assets/images/contact/principal.webp";
---

<Layout
  title="EXPERTOS EN LETREROS LUMINOSOS, NEÓN LED, HOLOGRAMAS 3D"
  description="Contacta a Yuntas Publicidad para una asesoría personalizada en diseño y tecnología LED. Recibe un presupuesto a medida y soluciones para transformar tus espacios."
  canonicalUrl="https://yuntaspublicidad.com/contact/"
>
  <!-- Banner Principal -->
  <section class="relative w-full h-dvh flex flex-col justify-center items-center">
    <img
      src={fondo.src}
      alt="Fondo de contacto"
      class="absolute z-0 w-full h-full object-cover object-bottom"
    />
    <h1 class="relative z-10 Montserrat text-7xl font-black text-white mt-4 drop-shadow-[0_2px_4px_rgba(0,0,0,0.8)]">
      CONTACTO
    </h1>
  </section>

  <!-- Título "CONOCE NUESTROS MEDIOS DE CONTACTO" dividido en dos líneas -->
  <section class="bg-white py-12">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-[#203565] mb-4">
          CONOCE NUESTROS MEDIOS DE
        </h2>
        <h2 class="text-4xl md:text-5xl font-black text-[#203565]">
          CONTACTO
        </h2>
      </div>
    </div>
  </section>

  <!-- Sección de Información de Contacto -->
  <section class="bg-white pb-16">
    <div class="container mx-auto px-4">
      <!-- Los 3 divs en fila para escritorio con mismo tamaño -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto">
        
        <!-- Teléfono -->
        <div class="text-center bg-[#E2F6F6] rounded-2xl p-8 flex flex-col items-center justify-center min-h-[200px]">
          <div class="bg-[#203565] w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 14H4V6h16v12z"/>
              <path d="M12 10c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/>
            </svg>
          </div>
          <p class="text-xl font-semibold text-gray-800">+51 912 849 782</p>
        </div>

        <!-- Dirección -->
        <div class="text-center bg-[#E2F6F6] rounded-2xl p-8 flex flex-col items-center justify-center min-h-[200px]">
          <div class="bg-[#203565] w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <div class="text-gray-800">
            <p class="text-lg font-semibold">Urb. Alameda la nivel</p>
            <p class="text-lg">M: F Lt 30</p>
          </div>
        </div>

        <!-- Email -->
        <div class="text-center bg-[#E2F6F6] rounded-2xl p-8 flex flex-col items-center justify-center min-h-[200px]">
          <div class="bg-[#203565] w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
            </svg>
          </div>
          <p class="text-xl font-semibold text-gray-800">yuntaspublicidad@gmail.com</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Separador -->
  <div class="border-t border-gray-300 mx-auto max-w-7xl"></div>

  <!-- Sección del Formulario -->
  <section class="bg-white py-16">
    <div class="container mx-auto px-4">
      <!-- Contenedor del formulario con fondo azul claro -->
      <div class="max-w-7xl mx-auto bg-[#E2F6F6] rounded-2xl p-12">
        <h2 class="text-3xl font-bold text-center text-[#203565] mb-12">SOLICITA INFORMACIÓN</h2>
        
        <form class="space-y-6 px-4 md:px-16" style="padding-left: 220px; padding-right: 220px;">
          <!-- Primera fila: Nombre y Apellido -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <input
                type="text"
                placeholder="Nombre"
                class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:border-blue-500 text-gray-800 placeholder-gray-500 bg-white"
              />
            </div>
            <div>
              <input
                type="text"
                placeholder="Apellido"
                class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:border-blue-500 text-gray-800 placeholder-gray-500 bg-white"
              />
            </div>
          </div>

          <!-- Segunda fila: Teléfono y Distrito -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <input
                type="tel"
                placeholder="Teléfono"
                class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:border-blue-500 text-gray-800 placeholder-gray-500 bg-white"
              />
            </div>
            <div>
              <input
                type="text"
                placeholder="Distrito"
                class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:border-blue-500 text-gray-800 placeholder-gray-500 bg-white"
              />
            </div>
          </div>

          <!-- Detalle de solicitud -->
          <div>
            <input
              type="text"
              placeholder="Detalle de solicitud"
              class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:border-blue-500 text-gray-800 placeholder-gray-500 bg-white"
            />
          </div>

          <!-- Mensaje -->
          <div>
            <textarea
              placeholder="Mensaje"
              rows="6"
              class="w-full px-4 py-3 border border-gray-400 rounded-md focus:outline-none focus:border-blue-500 text-gray-800 placeholder-gray-500 bg-white"
            ></textarea>
          </div>

          <!-- Botón Enviar -->
          <div class="text-center">
            <button
              type="submit"
              class="bg-[#1D2C5E] hover:bg-[#141B40] text-white font-semibold py-3 px-16 rounded-full transition-colors duration-300 uppercase text-lg"
            >
              ENVIAR
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- Separador -->
  <div class="border-t border-gray-300 mx-auto max-w-7xl"></div>

  <!-- Sección del Mapa -->
  <section class="bg-white py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center text-gray-800 mb-12">CADA VEZ MÁS CERCA DE TI</h2>
      <div class="max-w-7xl mx-auto">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3902.255255812076!2d-76.94464365943126!3d-12.025940110892334!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105c97c8934a213%3A0x7f6ccb249e86b5e6!2sYuntas%20Producciones!5e0!3m2!1ses-419!2spe!4v1739596969950!5m2!1ses-419!2spe"
          width="100%"
          height="450"
          class="rounded-3xl"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          style="border:0;"
        ></iframe>
      </div>
    </div>
  </section>

</Layout>