    </div>

    <!-- Mensaje Final -->
    <div class="flex flex-col items-center my-12">
      <p class="bg-gradient-to-r from-blue-700 to-cyan-500 text-center py-4 px-6 sm:px-16 max-w-3xl w-full sm:w-auto mx-auto rounded-3xl text-2xl sm:text-3xl font-extrabold mb-20 cursor-default">
      ¡HOLA!
        <span class="text-lg sm:text-xl font-normal block mt-2">
          Déjanos tus datos y agenda una visita a nuestro local.
        </span>
      </p>

      <!-- Formulario de Contacto -->
      <div class="max-w-4xl md:max-w-6xl w-full bg-[#FDEEE8] rounded-3xl p-6 sm:p-8 shadow-2xl mt-6 mb-20">
        <h2 class="text-xl sm:text-2xl font-semibold text-center mb-6 text-black">Solicita información</h2>

        <form>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <input type="text" placeholder="Nombre*" class="border text-black border-gray-400 p-3 w-full bg-transparent placeholder-gray-500 focus:border-blue-600 focus:outline-none rounded-md" required>
            <input type="text" placeholder="Apellidos*" class="border text-black border-gray-400 p-3 w-full bg-transparent placeholder-gray-500 focus:border-blue-600 focus:outline-none rounded-md" required>
            <input type="tel" placeholder="Teléfono*" class="border text-black border-gray-400 p-3 w-full bg-transparent placeholder-gray-500 focus:border-blue-600 focus:outline-none rounded-md" required>
            <input type="text" placeholder="Distrito*" class="border text-black border-gray-400 p-3 w-full bg-transparent placeholder-gray-500 focus:border-blue-600 focus:outline-none rounded-md" required>
          </div>

          <input type="text" placeholder="Detalle de reclamación" class="border text-black border-gray-400 p-3 w-full bg-transparent placeholder-gray-500 focus:border-blue-600 focus:outline-none mt-4 rounded-md">
          <textarea placeholder="Mensaje" rows="4" class="text-black p-3 w-full bg-gray-300 border border-gray-400 placeholder-gray-500 focus:border-blue-600 focus:outline-none mt-4 rounded-md"></textarea>

          <div class="mt-6 flex justify-center">
            <button type="submit" class="bg-[#1D2C5E] hover:bg-[#141B40] text-lg text-white font-semibold py-2 px-10 rounded-full transition-all cursor-pointer">
              Enviar
            </button>
          </div>
        </form>
      </div>
