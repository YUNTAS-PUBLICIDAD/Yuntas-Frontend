---
import AboutComponent from "../components/about/AboutComponent.astro";
import MissionCard from "../components/about/MissionCard.astro";
import ValoresCorporativos from "../components/about/ValoresCorporativos.astro";
import VisionCard from "../components/about/VisionCard.astro";
import Layout from "../layouts/Layout.astro";
// Importar la imagen desde la carpeta de assets
import about from "../assets/images/about/image1.webp";
---

<Layout title="Sobre Nosotros" canonicalUrl="https://yuntaspublicidad.com/about/">
  <section class="relative w-full h-dvh flex justify-center items-center">
    <img
      src={ about.src }
      alt="Oficina moderna iluminada con luces LED blancas, espacio de trabajo minimalista con escritorios, monitores y sillas, ideal para entornos corporativos creativos y tecnolÃ³gicos"
      title="Oficina moderna iluminada con luces LED blancas"
      class="absolute z-0 w-full h-full object-cover object-bottom"
    />
    <h1
      class="relative z-10 text-cyan-500 font-bold text-3xl md:text-5xl flex flex-col text-center sombra-title"
    >
      
      <span class="text-5xl md:text-8xl text-white">NOSOTROS</span>
    </h1>
  </section>
  <AboutComponent />
<!-- para la altura mision vision -->
  <div class="card-container flex flex-col lg:flex-row justify-center items-stretch gap-8 lg:gap-10 py-12 px-4 max-w-5xl mx-auto">
    <div class="card flex-1 flex flex-col md:border-b-0 border-b-90 border-b-blue-950">
      <MissionCard />
    </div>
    <div class="card flex-1 flex flex-col">
      <VisionCard />
    </div>
  </div>
  <ValoresCorporativos />
</Layout>
